{
  "index": "github-commits",
  "mappings": {
    "properties": {
      "commit_id": { "type": "keyword" },
      "author": { "type": "keyword" },
      "timestamp": { "type": "date" },
      "message": { 
        "type": "text",
        "copy_to": "semantic_field"
      },
      "semantic_field": { "type": "semantic_text" },
      "files_changed": { "type": "keyword" },
      "service": { "type": "keyword" },
      "branch": { "type": "keyword" },
      "additions": { "type": "integer" },
      "deletions": { "type": "integer" }
    }
  }
}
